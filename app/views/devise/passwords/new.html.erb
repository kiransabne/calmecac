<div class="registration-container">
  <div class="align vertical">
    <h2 class="main-title ">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: 'registration-container__label' %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: 'registration-container__input' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'button-std' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
